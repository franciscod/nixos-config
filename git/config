[commit]
	verbose = true
[init]
	defaultBranch = master
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autostash = true

[alias]
	ca = commit --amend
	co = checkout
	ma = merge --abort
	pp = !git pull && git push
	rc = rebase --continue
