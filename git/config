[user]
	email = git@fd1.com.ar
	name = Francisco Demartino

[commit]
	verbose = true
[init]
	defaultBranch = master
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autostash = true

[alias]
	ca   = commit --amend
	cane = commit --amend --no-edit
	co   = checkout
	ma   = merge --abort
	pp   = !git pull && git push
	pu   = !git pull && git push
	rc   = rebase --continue
